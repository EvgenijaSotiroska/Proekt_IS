@model CoffeeEShop.Domain.DomainModels.DetailedProduct

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="container py-4">
    <div class="row g-3">
        <div class="col-md-4">
  
                <div class="border rounded p-4 text-center">
                    <strong>@Model.DisplayName</strong><br />
                    <small>No image available</small>
                </div>
            
        </div>

        <div class="col-md-8">
            <h2>@Model.DisplayName <small class="text-muted">(@Model.Origin)</small></h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-4">Coffee dose</dt>
                <dd class="col-sm-8">@Model.IngredientsDescription</dd>

                <dt class="col-sm-4">Caffeine</dt>
                <dd class="col-sm-8">@Model.CaffeineInfo</dd>


                <dt class="col-sm-4">Served</dt>
                <dd class="col-sm-8">@Model.Served</dd>
            </dl>

            <p class="mt-3">
                <a href="@Url.Action("Details", new { id = "espresso" })" class="btn btn-outline-primary btn-sm">Show Espresso</a>
                <a href="@Url.Action("Details", new { id = "freddo" })" class="btn btn-outline-secondary btn-sm">Show Freddo</a>
            </p>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
