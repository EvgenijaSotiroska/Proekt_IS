@model IEnumerable<CoffeeEShop.Domain.DomainModels.DetailedProduct>

@{
    ViewData["Title"] = "All Coffees";
}

<h1>All Coffees</h1>
<h3>Here is some additional informations about unordinary coffees!</h3>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var coffee in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@coffee.Image" class="card-img-top" alt="@coffee.Title" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@coffee.Title</h5>
                    <p><strong>Description:</strong> @coffee.Description</p>
                    <p><strong>Ingredients:</strong> @string.Join(", ", coffee.Ingredients)</p>
                </div>
            </div>
        </div>
    }
</div>

