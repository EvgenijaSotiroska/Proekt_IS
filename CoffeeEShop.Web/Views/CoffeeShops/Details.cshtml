@model CoffeeEShop.Domain.ViewModels.ShopDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>CoffeeShop</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shop.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shop.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shop.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shop.Rating)
        </dd>
    </dl>
</div>

<hr />

<h4>Menu</h4>
@if (Model.Products.Any())
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                @product.Name - @product.Price$
            </li>
        }
    </ul>
}
else
{
    <p>No products available for this shop.</p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Shop.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <a asp-controller="Products" asp-action="Create" asp-route-shopId="@Model.Shop.Id" class="btn btn-primary">
        Add Product
    </a>

</div>
