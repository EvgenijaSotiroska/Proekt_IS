@model CoffeeEShop.Domain.DomainModels.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 30px auto;
        display: flex;
        gap: 20px;
        background-color: #fdf6f0; 
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .details-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .details-image img {
            max-width: 100%;
            max-height: 400px;
            border: 3px solid #6f4e37; 
            border-radius: 10px;
            object-fit: contain;
        }

    .details-info {
        flex: 2;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .details-info h2 {
            color: #6f4e37; /* brown */
            margin-top: 0;
        }

        .details-info p {
            color: #3e2c20; /* darker brown text */
            margin: 5px 0;
        }

    .shops-list {
        padding-left: 20px;
        color: #3e2c20;
    }

    .details-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
    }

    /* Button colors in beige/brown palette */
    .btn-edit {
        background-color: #6f4e37; /* dark brown */
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        color: #fdf6f0; /* beige text */
        text-decoration: none;
    }

    .btn-back {
        background-color: #d9c5b2; 
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        color: #6f4e37; 
        text-decoration: none;
    }

        .btn-edit:hover, .btn-back:hover {
            opacity: 0.9;
            color: #d9c5b2;
        }

    .shop-link {
        color: #6f4e37; 
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease, text-decoration 0.2s ease;
    }

        .shop-link:hover {
            color: #3e2c20; 
            text-decoration: underline;
        }
</style>

<div class="details-container">
    <div class="details-image">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="@Model.Name" />
        }
        else
        {
            <span>No image available</span>
        }
    </div>
    <div class="details-info">
        <div>
            <h2>@Model.Name</h2>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price</p>

            <h4>Available in Shops</h4>
            @if (Model.AllCoffeeShops != null && Model.AllCoffeeShops.Any())
            {
                <ul class="shops-list">
                    @foreach (var shop in Model.AllCoffeeShops)
                    {
                        <li>
                            <a asp-controller="CoffeeShops" asp-action="Details" asp-route-id="@shop.CoffeeShop.Id" class="shop-link">
                                @shop.CoffeeShop.Name
                            </a>
                        </li>
                    }
                </ul>

            }
            else
            {
                <p>This product is not available in any shops.</p>
            }
        </div>
        <div class="details-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">Edit</a>
            <a asp-action="Index" class="btn-back">Back to List</a>
        </div>
    </div>
</div>
