@model CoffeeEShop.Domain.DTO.AddToOrderDTO

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4" style="background-color: #fdf6f0; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">

                <h4 class="text-center" style="color: #6f4e37;">Add Product to Order</h4>
                <hr style="border-color:#d9c5b2;" />

                <form method="post" asp-action="AddProductToOrder" asp-route-shopId="@Model.CoffeeShopId">

                    <input type="hidden" asp-for="SelectedProductId" />
                    <input type="hidden" asp-for="CoffeeShopId" />

                    <div class="form-group mb-3">
                        <label asp-for="SelectedProductName" class="control-label" style="color: #6f4e37;"></label>
                        <input disabled="disabled" asp-for="SelectedProductName" class="form-control" style="background-color:#fff3e6; border: 1px solid #d9c5b2; color:#3e2c20;" />
                        <span asp-validation-for="SelectedProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="control-label" style="color: #6f4e37;"></label>
                        <input asp-for="Quantity" type="number" min="1" class="form-control" style="background-color:#fff3e6; border: 1px solid #d9c5b2; color:#3e2c20;" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn" style="background-color:#6f4e37; color:#fdf6f0; padding: 10px 20px; border-radius:5px;">Add To Order</button>
                    </div>
                    
                </form>

            </div>
        </div>
    </div>
</div>
