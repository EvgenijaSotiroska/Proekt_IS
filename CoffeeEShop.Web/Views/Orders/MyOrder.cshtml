@model List<CoffeeEShop.Domain.DTO.OrderDTO>

<style>
    .cart-container {
        background-color: #f5f0e6; 
        padding: 20px;
        border-radius: 12px;
        max-width: 700px;
        margin: auto;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .cart-header {
        color: #5c3d2e; 
        border-bottom: 2px solid #d2b48c; 
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .cart-item {
        background-color: #fffaf3; 
        border: 1px solid #d2b48c; 
        border-radius: 8px;
        padding: 12px 16px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .cart-item strong {
            color: #5c3d2e;
        }

    .cart-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 2px solid #d2b48c;
        padding-top: 15px;
        margin-top: 20px;
        font-size: 1.2rem;
        font-weight: bold;
        color: #3e2723; 
    }

    .btn-coffee {
        background-color: #8b5e3c;
        border: none;
        color: #fff;
        padding: 10px 18px;
        border-radius: 8px;
        transition: background 0.3s;
    }

        .btn-coffee:hover {
            background-color: #6f4e37; 
        }
</style>

<div class="cart-container">
    <h2 class="cart-header">☕ My Cart</h2>

    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
       

        @foreach (var item in Model)
        {
            <div class="cart-item">
                <div>
                    <strong>@item.SelectedProductName</strong> × @item.Quantity
                </div>
                <div>
                    @(item.Price * item.Quantity)$
                </div>
            </div>
        }

        <div class="cart-total">
            <span>Total</span>
            <span>@Model.Sum(i => i.Price * i.Quantity)$</span>
        </div>
        <div style="display: flex; gap: 10px; margin-top: 15px;">
            <form asp-action="PlaceOrder" method="post" style="margin-bottom: 15px;">
                <div class="mb-3">
                    <label for="Address" style="color: #5c3d2e;">Delivery Address:</label>
                    <input type="text" id="Address" name="Address" class="form-control"
                           placeholder="Enter your address" required
                           style="background-color:#fffaf3; border:1px solid #d2b48c; color:#3e2723;" />
                </div>

                <div style="display: flex; gap: 10px;">
                    <button type="submit" class="btn btn-coffee">Place Order</button>
                    <a asp-controller="CoffeeShops" asp-action="Index" class="btn btn-coffee">Continue Shopping</a>
                </div>
            </form>

        </div>
    }
</div>
