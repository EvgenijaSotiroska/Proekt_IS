@{
}

@model List<CoffeeEShop.Domain.DTO.OrderDTO>

<h2>My Order</h2>

@if (!Model.Any())
{
    <p>Your order is empty.</p>
}
else
{
    <form asp-action="PlaceOrder" method="post">
        <button type="submit" class="btn btn-success mb-3">Place Order</button>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SelectedProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price$</td>
                    <td>@(item.Price * item.Quantity)$</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.Sum(i => i.Price * i.Quantity)$</h3>
}